{
  "info": {
    "name": "Soccer API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Signup",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"manager@example.com\",\n    \"password\": \"securepassword123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/v1/auth/signup",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "auth",
                "signup"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.environment.set(\"token\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"manager@example.com\",\n    \"password\": \"securepassword123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/v1/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "auth",
                "login"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Team",
      "item": [
        {
          "name": "Get My Team",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/me/team",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "me",
                "team"
              ]
            }
          },
          "response": []
        },
        {
          "name": "Update Team",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"London Lions\",\n    \"country\": \"England\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/v1/me/team",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "me",
                "team"
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Player",
      "item": [
        {
          "name": "Update Owned Player",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"firstName\": \"John\",\n    \"lastName\": \"Doe\",\n    \"country\": \"USA\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/v1/me/players/:playerId",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "me",
                "players",
                ":playerId"
              ],
              "variable": [
                {
                  "key": "playerId",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Market",
      "item": [
        {
          "name": "List Player on Market",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"askingPrice\": 120000000\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/v1/me/players/:playerId/list",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "me",
                "players",
                ":playerId",
                "list"
              ],
              "variable": [
                {
                  "key": "playerId",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Remove from Market",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/me/players/:playerId/list",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "me",
                "players",
                ":playerId",
                "list"
              ],
              "variable": [
                {
                  "key": "playerId",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "View Market",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/market?country=Spain&minPrice=500000",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "market"
              ],
              "query": [
                {
                  "key": "country",
                  "value": "Spain"
                },
                {
                  "key": "minPrice",
                  "value": "500000"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Buy Player",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/v1/market/:listingId/buy",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "v1",
                "market",
                ":listingId",
                "buy"
              ],
              "variable": [
                {
                  "key": "listingId",
                  "value": "1"
                }
              ]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ]
}